<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/createTaskPage"
    android:background="@color/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_grey_highlight"
            android:padding="15dp">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:flexWrap="wrap"
                app:alignItems="center"
                app:justifyContent="flex_start">
            <TextView
                android:textSize="18dp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:"
                android:layout_marginEnd="10dp"/>
            <EditText
                android:id="@+id/createTaskTitle"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="Task title" />
            </com.google.android.flexbox.FlexboxLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:flexWrap="wrap"
                app:alignItems="center"
                app:justifyContent="flex_start">
            <TextView
                android:textSize="18dp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:layout_marginEnd="10dp"/>
            <EditText
                android:id="@+id/createTaskDescription"
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:hint="Task description" />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:alignItems="center"
                app:justifyContent="flex_start"
                android:layout_marginBottom="10dp">

                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Priority:"
                    android:layout_marginEnd="27dp"/>

                <Spinner
                    android:paddingEnd="26dp"
                    android:id="@+id/createTaskPriority"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:background="@drawable/spinner_background"/>
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:flexWrap="wrap"
                app:alignItems="center"
                app:justifyContent="flex_start">
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:layout_marginEnd="32dp"/>

                <Spinner
                    android:paddingEnd="26dp"
                    android:id="@+id/createTaskStatus"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:background="@drawable/spinner_background"/>
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:flexWrap="wrap"
                app:alignItems="center"
                app:justifyContent="flex_start">


                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assignee:"
                    android:layout_marginEnd="10dp"/>

                <Spinner
                    android:paddingEnd="26dp"
                    android:id="@+id/createTaskAssignee"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:background="@drawable/spinner_background"/>
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:flexWrap="wrap"
                app:alignItems="center"
                app:justifyContent="flex_start">

                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Release:"
                    android:layout_marginEnd="21dp"/>

                <Spinner
                    android:paddingEnd="26dp"
                    android:id="@+id/createTaskRelease"
                    android:layout_width="236dp"
                    android:paddingStart="15dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_background"/>
            </com.google.android.flexbox.FlexboxLayout>

            <Button
                android:id="@+id/createTaskButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomButton"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:layout_marginTop="0dp"
                android:text="Create"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AAffffff"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>