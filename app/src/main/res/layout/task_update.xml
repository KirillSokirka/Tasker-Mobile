<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/createTaskPage"
    android:background="@color/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/newTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New task title" />
        <EditText
            android:id="@+id/newTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New task description" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority:"/>

        <Spinner
            android:id="@+id/newTaskPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Status:"/>

        <Spinner
            android:id="@+id/newTaskStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignee:"/>

        <Spinner
            android:id="@+id/newTaskAssignee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Release:"/>

        <Spinner
            android:id="@+id/newTaskRelease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <Button
            android:id="@+id/updateTaskButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            />

    </LinearLayout>

    <View
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AAffffff"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>